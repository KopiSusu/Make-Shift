<body>
<div class="container overall">
  <div class="col-md-4">

    <form action ='/project' method='post'>
      <div class="panel panel-default create2">
        <div class="panel-body">
          <!-- <button class="button" type="submit"> ADD IMAGE </button> -->
          <h3 class="instruction-heading">Add Project Image</h3>
            <input name="photo" class="textbox"type="text" placeholder="Image URL"> 
        </div>
      </div>


    <div class="panel panel-default create1">
      <div class="panel-heading">
        <h3 class="instruction-heading">Materials & Type</h3>
          <!-- <button class="button" type="submit"> ADD MATERIAL </button> -->
          <select name="materials[name][]" class='material-type' multiple>
          <% @materials.each do |x| %>
            <option value="<%=x.id%>"><%=x.name%></option>
          <%end%>
          </select>
          <!-- <button class="button" type="submit"> ADD TYPE </button> -->
          <select name="types[name][]" class = 'material-type' multiple>
          <% @types.each do |x| %>
            <option value="<%=x.id%>"><%=x.name%></option>
          <%end%>
          </select>
          </div>
        <!-- <div class="panel-body"></div> -->
    </div>


    <div class="container create_page">

      <h3 class="instruction-heading">Add Your Project Instructions Here</h3>

          <input class="textbox step1" name="steps[instruction][]" type='text' placeholder="step 1">
          <input class="textbox step2" name="steps[instruction][]" type='text' placeholder="step 2">
          <input class="textbox step3" name="steps[instruction][]" type='text' placeholder="step 3">
          <input class="textbox step4" name="steps[instruction][]" type='text' placeholder="step 4">
          <input class="textbox step5" name="steps[instruction][]" type='text' placeholder="step 5">
          <input class="textbox step6" name="steps[instruction][]" type='text' placeholder="step 6">
          <input class="textbox" name="name" type='text' placeholder="name">
          <input class="button submit" type='submit'>
    </div>
    </form>

  </div>
</div>



</body>



